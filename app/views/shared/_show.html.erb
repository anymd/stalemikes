	<% if @show.country %><tr><td>country</td><td><%= @show.country %></td></tr><% end %>
	<% if @show.phone != "" %><tr><td>phone</td><td><%= @show.phone %></td></tr><% end %>
	<% if @show.web_site != "" %><tr><td>web site</td><td><%= @show.web_site %></td></tr><% end %>
	<% if @show.address != "" %><tr><td>facebook</td><td><%= @show.facebook_link %></td></tr><% end %>
	<% if @show.twitter_name != "" %><tr><td>twitter</td><td><%= @show.twitter_name %></td></tr><% end %>
	<% if @show.day != "" %><tr><td>day of week</td><td><%= @show.day %></td></tr><% end %>
	<% if @show.frequency != "" %><tr><td>frequency</td><td><%= @show.frequency %></td></tr><% end %>
	<% if @show.show_type != "" %><tr><td>type</td><td><%= @show.show_type %></td></tr><% end %>
	<% if @show.signup_time != "" %><tr><td>signup time</td><td><%= @show.signup_time %></td></tr><% end %>			
	<% if @show.start_time != "" %><tr><td>start time</td><td><%= @show.start_time %></td></tr><% end %>
	<% if @show.host_name != "" %><tr><td>host name</td><td><%= @show.host_name %></td></tr><% end %>			
	<% if @show.price != "" %><tr><td>price</td><td><%= @show.price %></td></tr><% end %>			
	<% if @show.notes != "" %><tr><td>notes</td><td><%= @show.notes %></td></tr><% end %>
