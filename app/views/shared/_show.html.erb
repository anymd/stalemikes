	<% if @show.name %><tr><td>name</td><td><%= @show.name %></td></tr><% end %>	
	<% if @show.venue %><tr><td>venue</td><td><%= @show.venue %></td></tr><% end %>
	<% if @show.address %><tr><td>adress</td><td><%= @show.address %></td></tr><% end %>
